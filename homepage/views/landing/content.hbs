<script>
    textAnimation('opacity-0', 'opacity-100', 0, 0, 400, 200)
    
    after(800, () => {
        textAnimationBack('text-black', 'text-transparent', 0, 600, false, 0, 400, 200)

        every(() => {
            return (5550 + (Math.random() * (5850 - 250) + 250)) * ((Math.random() * 100) < 5 ? 0.25 : 1)
        }, () => {
            textAnimationBack('text-black', 'text-transparent', 0, 600, false, 0, 400, 200)
        })
    })
</script>