<main class="flex flex-col h-screen w-full justify-start items-center bg-slate-0">
    <div class="flex flex-col p-4 pb-6 justify-center items-center gap-4 w-5/6 sm:w-3/5 md:w-2/5 border-slate-200 rounded-md bg-white">
        <span class="p-4 text-xl font-semibold transition-all duration-300 text-black hover:text-transparent bg-clip-text bg-gradient-to-r from-orange-400 to-rose-600">Manage</span>
        
        <div class="flex flex-col gap-2 w-2/3">
            <span class="text-sm text-slate-500 font-medium" id="organizationInputTitle">Name</span>
            <input class="text-md text-slate-500 p-4 font-medium outline-none bg-slate-100 h-10 rounded-md" onkeyup="" type="name" id="organizationInput" disabled value="{{orgname}}"></input>
        </div>

        <hr class="w-2/3">

        <div class="flex flex-col justify-center items-center gap-2 w-2/3">
            <a class="hover:cursor-pointer hover:bg-rose-700 transition-all duration-300 font-medium text-md text-slate-100 p-2 outline-none bg-rose-600 h-10 rounded-md w-full text-center" onclick="submitDelete()">Delete</a>
        </div>
    </div>
</main>