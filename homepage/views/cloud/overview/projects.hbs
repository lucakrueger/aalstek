<div class="w-full flex flex-col overflow-auto h-screen">
    <div class="flex flex-col gap-2 p-4">
        {{#each orgs}}  
            <div>
                <a class="text-xl font-medium transition-all duration-300 text-black hover:text-transparent bg-clip-text bg-gradient-to-r from-slate-500 to-slate-800" href="/organization/{{this.id}}">{{this.name}}</a>
            </div>
            <div class="flex flex-row ml-1 mb-4 gap-2">
                {{#with this}}
                    {{#each projects}}
                        <div class="hover:cursor-pointer flex flex-row" onclick="location.href = '/cloud/{{../id}}/{{id}}'">
                            <div class="w-fit max-w-sm h-24 bg-slate-0 flex flex-col rounded-lg transition-all duration-300 hover:shadow-md border border-slate-200">
                                <div class="p-4 flex flex-col justify-center align-center gap-2">
                                    <span class="text-md font-medium text-start">{{this.name}}</span>
                                    
                                    <div class="h-max min-w-[12rem]  max-w-sm">
                                        <!-- Max 50 Characters -->
                                        <span class="text-md text-slate-600 truncate">{{this.description}}</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{/with}}

                <div class="hover:cursor-pointer flex flex-row justify-center align-center ml-1" onclick="location.href = 'cloud/{{this.id}}/new'">
                    <div class="w-[8rem] h-24 bg-slate-0 flex flex-col justify-center align-center rounded-lg transition-all duration-300 hover:shadow-md border border-slate-200">
                        <div class="p-4 flex flex-col justify-center align-center gap-2">
                            <svg class="fill-slate-400" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.2 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. --><path d="M256 80c0-17.7-14.3-32-32-32s-32 14.3-32 32V224H48c-17.7 0-32 14.3-32 32s14.3 32 32 32H192V432c0 17.7 14.3 32 32 32s32-14.3 32-32V288H400c17.7 0 32-14.3 32-32s-14.3-32-32-32H256V80z"/></svg>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}

        <div>
            <a class="text-xl font-medium transition-all duration-300 text-black hover:text-transparent bg-clip-text bg-gradient-to-r from-slate-500 to-slate-800" href="/organization/new">New Organization +</a>
        </div>
        <div class="mb-24"></div>
    </div>
</div>